<li>
  <ul>
    <li>
      <img src=<%= @user.Photo %> alt="user image" />
      <h2><%= @user.Name %></h2>
      <p>Number of Posts: 
        <% if @user.Posts_Counter == nil %>
          0
        <% else %>
          <%= @user.Posts_Counter %>
        <% end %>
      </p>
    </li>
  </ul>
</li>
<li>
  <p><%=@user.Bio%></p>
</li>
<li>
  <ul>
    <% @posts.each_with_index do |post, index| %>
      <li>
        <h3>Post: <%=index+1%></h3>
        <p><%=post.Text%></p>
        <p>Comments: 
          <% if post.CommentsCounter == nil %>
            0
          <% else %>
            <%= post.CommentsCounter %>
          <% end %>
        <p>Likes: 
          <% if post.LikesCounter == nil %>
            0
          <% else %>
            <%= post.LikesCounter %>
          <% end %>
      <li>
    <% end %>
  </ul>
<li>
<li>
  <button type="button">See all posts</button>
</li>