<li>
  <ul>
    <li>
      <p>Post: <%= @post.id %> by <%= @post.user.Name %> </p>
      <p><%= @post.Text %></p>
    </li>
    <li>
      <ul>
        <% @post.comments.each do |comment| %>
          <li>
            <p><%= comment.user.Name %>: <%= comment.Text %></p>
          </li>
        <% end %>
      </ul>
    </li>
  </ul>
</li>