<ul class = "page_body">
  <li class = "complete_post">
    <ul class = "post_head">
      <li>
        <p>Post: <%= @post.id %> by <%= @post.user.Name %> </p>
      </li>
      <li class = "post_interactions">
        <p>Comments: 
          <% if @post.CommentsCounter == nil %>
            0
          <% else %>
            <%= @post.CommentsCounter %>
          <% end %>
        <p>Likes: 
          <% if @post.LikesCounter == nil %>
            0
          <% else %>
            <%= @post.LikesCounter %>
          <% end %>
        </p>
      </li>
    </ul>
    <ul>
      <li class = "post_complete_text">
        <p><%= @post.Text %></p>
      </li>
    </ul>
  </li>
  <li>
    <% if can? :destroy, @post %>
      <button><%= link_to 'Remove Post', :method => :delete %></button>
    <% end %>
  </li>
  <li class = "comments_container">
    <%if @post.comments.length == 0 %>
      <span>No comments posted</span>
    <% else %>
      <% @post.comments.each do |comment| %>
        <p><%= comment.user.Name %>: <%= comment.Text %></p>
      <% end %>
    <% end %>
  </li>
</ul>
<button><%= link_to 'Add Comment', new_user_post_comment_path(user_id: @post.user_id, post_id: @post.id) %></button>
<%= render 'likes/form' %>